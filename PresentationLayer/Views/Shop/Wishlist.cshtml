@model Enumerable<Product>
<div class="ps-breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li><a asp-route="/">Əsas</a></li>
            <li><a asp-action="index" asp-controller="shop">Məhsullar</a></li>
            <li>Sevimlilər</li>
        </ul>
    </div>
</div>
<div class="ps-section--shopping ps-whishlist">
    <div class="container">
        <div class="ps-section__header">
            <h1>Sevimlilər</h1>
        </div>
        <div class="ps-section__content">
            <div class="table-responsive">
                <table class="table ps-table--whishlist ps-table--responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Məhsul</th>
                            <th>Qiymət</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                            <tr>
                                <td data-label="Remove"><a href="#"><i class="icon-cross"></i></a></td>
                                <td data-label="Product">
                                    <div class="ps-product--cart">
                                        <div class="ps-product__thumbnail"><a href="product-default.html"><img src="img/products/shop/1.jpg" alt="" /></a></div>
                                        <div class="ps-product__content">
                                            <a href="product-default.html">Apple iPhone Retina 6s Plus 64GB</a>
                                            <p>Sold By:<strong> YOUNG SHOP</strong></p>
                                        </div>
                                    </div>
                                </td>
                                <td class="price" data-label="Price">$@item</td>
                                <td data-label="Status"><span class="ps-tag ps-tag--in-stock">In-stock</span></td>
                                <td data-label="action"><a class="ps-btn" href="#">Add to cart</a></td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>