@using EntityLayer.Concrete
@model IEnumerable<Category>



@foreach (var item in Model)
{
    if (item.ParentCategoryId == null && item.SubCategories == null)
    {
        <li>
            <a href="#.html">@item.Name</a>
        </li>
    }
    else if (item.SubCategories?.Any() == true)
    {
        <li class="menu-item-has-children has-mega-menu">
            <a href="#">@item.Name</a><span class="sub-toggle"></span>
            <div class="mega-menu">
                <div class="mega-menu__column">
                    <ul class="mega-menu__list">
                        @foreach (var subcategory in item.SubCategories)
                        {
                            <li>
                                <a href="#.html">@subcategory.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </li>
    }
}