@model UserLoginDto


<input type="hidden" value="@Context.Request.Query["ReturnUrl"]" name="returnUrl" />
<div class="ps-form__content">
    <h5>Hesabınıza daxil olun</h5>
    <div class="form-group">
        <input class="form-control" type="text" placeholder="İstifadəçi adı və ya email" asp-for="Email">
    </div>
    <span asp-validation-for="Email" class="text-danger"></span>
    <div class="form-group form-forgot">
        <input class="form-control" placeholder="Şifrə" type="password" asp-for="Password">
        <a href="">Şifrəmi unutdum</a>
    </div>
    <div class="form-group">
        <div class="ps-checkbox">
            <input class="form-control" asp-for="RememberMe" />
            <label asp-for="RememberMe">Məni xatırla</label>
        </div>
    </div>
    <span asp-validation-for="Password" class="text-danger mb-3"></span>
    <div class="form-group submit">
        <button type="submit" class="ps-btn ps-btn--fullwidth">Giriş</button>
    </div>
</div>
